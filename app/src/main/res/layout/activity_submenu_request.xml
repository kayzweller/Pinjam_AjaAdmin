<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_bg_grey"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".SubmenuRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <ImageButton
            android:onClick="buttonBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:layout_margin="4dp"
            android:background="#00FFFFFF"
            android:scaleType="center"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:contentDescription="BackButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permintaan Pinjaman."
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="24sp"
            android:textColor="@color/text_tertier"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:outlineProvider="paddedBounds"
                    android:padding="8dp"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="ID Peminjam"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:id="@+id/req_id_peminjam"
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="loading..."
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="ID Pinjaman"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:id="@+id/req_id_pinjaman"
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="loading..."
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Tanggal Pengajuan"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:id="@+id/req_tgl_pengajuan"
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="loading..."
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Waktu Pinjaman"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="90 Hari"
                            android:textColor="@color/text_tertier" />
                    </TableRow>


                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Besar Pinjaman"
                            android:textColor="@color/unselected"
                            />

                        <TextView
                            android:id="@+id/req_dana_pinjaman"
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:text="loading..."
                            android:gravity="end"
                            android:padding="3dp"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Bunga Pinjaman"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="20%"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Keuntungan Pendana"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="15%"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Total Dana Kembali"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:id="@+id/req_dana_kembali"
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:text="loading..."
                            android:gravity="end"
                            android:padding="3dp"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:padding="3dp"
                            android:text="Mode Pembayaran"
                            android:textColor="@color/unselected" />

                        <TextView
                            android:fontFamily="@font/fira_sans_bold_italic"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="Cicilan per Bulan"
                            android:textColor="@color/text_tertier" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="12sp"
                    android:text="1. Tekan tombol IDENTITAS PEMINJAM untuk melihat data detail mengenai identitas peminjam."
                    android:textColor="#EF6C00"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_sans"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="12sp"
                    android:text="2. Tekan SETUJUI PINJAMAN untuk menyetujui pinjaman untuk tampil dalam penawaran pinjaman yang dapat di danai Pendana."
                    android:textColor="#EF6C00"
                    android:textAlignment="textStart" />

                <Button
                    android:onClick="onClickDataPeminjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_round_bg"
                    android:fontFamily="@font/fira_sans_bold"
                    android:text="IDENTITAS PEMINJAM"
                    android:textSize="16sp" />

                <Button
                    android:onClick="onClickSetujuiPinjaman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_round_bg"
                    android:fontFamily="@font/fira_sans_bold"
                    android:text="SETUJUI PINJAMAN"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/fira_sans_bold_italic"
                    android:textColor="@color/unselected"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>